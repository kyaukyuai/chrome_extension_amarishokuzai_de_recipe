{
        "name": "余り食材deレシピ",
        "version": "0.0.1",
        "manifest_version": 2,
        "description": "冷蔵庫の余り食材から本日の献立を提案します",
        "content_security_policy": "script-src 'self' https://recipe4u.herokuapp.com; object-src 'self'",
        "icons": { "48": "icons/48_icon.png",
                  "128": "icons/128_icon.png" },
        "browser_action": {
                "default_title": "余り食材deレシピ",
                "default_icon" : "icons/default_icon.png",
                "default_popup": "show_recipe.html"
        },
        "permissions": [ "tabs", "https://recipe4u.herokuapp.com/*", "http://recipe4u.herokuapp.com/*", "http://*/*", "https://*/*" ],
        "web_accessible_resources": [
                "show_recipe.html"
        ]
}
